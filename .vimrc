" Colors
syntax on
set background=dark
"set t_Co=256

" Tab settings
set expandtab
set shiftwidth=2
set softtabstop=2
filetype plugin indent on

" Line numbering
set number
set relativenumber
set ruler

" Searching
set incsearch
set hlsearch

" Folding
" set foldenable
" set foldmethod=indent

" No compatibility
set nocompatible

" Security
set modelines=0

" QOL
set scrolloff=3
